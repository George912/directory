<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!--Servlets-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.bellintegrator.app.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>ru.bellintegrator.app.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>ru.bellintegrator.app.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contacteditor</servlet-name>
        <servlet-class>ru.bellintegrator.app.servlets.ContactEditorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>groupeditor</servlet-name>
        <servlet-class>ru.bellintegrator.app.servlets.GroupEditorServlet</servlet-class>
    </servlet>

    <!--Servlet mapping-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/userdata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/statistic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contacteditor</servlet-name>
        <url-pattern>/editor/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>groupeditor</servlet-name>
        <url-pattern>/editor/group</url-pattern>
    </servlet-mapping>
</web-app>
